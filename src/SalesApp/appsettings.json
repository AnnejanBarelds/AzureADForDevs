{
  "Authentication": {
    "AzureAd": {
      "AadInstance": "https://login.microsoftonline.com/{0}",
      "CallbackPath": "/signin-oidc",
      "ClientId": "[SalesApp_ClientID]",
      "ClientSecret": "[SalesApp_ClientSecret]",
      "Tenant": "[AD_TenantName]",
      "OrderServiceResourceId": "https://[AD_TenantName]/OrderService",
      "InventoryServiceResourceId": "https://[AD_TenantName]/InventoryService",
      "GraphResourceId": "https://graph.windows.net"
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}